# Notion API 配置
NOTION_CLIENT_ID=your_notion_client_id_here
NOTION_CLIENT_SECRET=your_notion_client_secret_here
NOTION_REDIRECT_URI=http://localhost:8080/callback

# 应用程序配置
APP_NAME=Notion 同步工具
APP_VERSION=1.0.0
DEBUG=false

# 数据库配置
DATABASE_URL=sqlite:///notion_sync.db

# 同步配置
DEFAULT_SYNC_INTERVAL=300  # 秒
MAX_FILE_SIZE=50MB
SUPPORTED_FORMATS=md,txt,html,json,png,jpg,jpeg,gif

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=notion_sync.log
MAX_LOG_SIZE=10MB
LOG_BACKUP_COUNT=5

# 速率限制
NOTION_API_RATE_LIMIT=3  # 每秒请求数
MAX_CONCURRENT_UPLOADS=5
RETRY_ATTEMPTS=3
RETRY_DELAY=1  # 秒
